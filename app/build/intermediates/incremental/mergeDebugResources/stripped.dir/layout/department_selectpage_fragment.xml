<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" android:tag="layout/department_selectpage_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:tag="binding_1">

            <include
                android:id="@+id/mToolbar_layout"
                layout="@layout/toolbar_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mInDoorAreaBtn"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="80dp"
                android:background="@color/yellow"
                android:foreground="@drawable/button_radius"
                android:text="室內區"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mOutDoorAreaBtn"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@color/yellow"
                android:foreground="@drawable/button_radius"
                android:text="戶外區"
                android:textColor="@color/black"

                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
         