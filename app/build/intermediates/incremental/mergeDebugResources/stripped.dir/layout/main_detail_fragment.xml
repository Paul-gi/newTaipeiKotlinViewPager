            android:background="@color/yellow" android:tag="binding_1">

            <include
                android:id="@+id/m_toolbar_layout"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/toolbar_layout">
            </include>

            <include
                android:id="@+id/mAnimalDetail"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                layout="@layout/animal_detail">
            </include>

            <include
                android:id="@+id/mPlantDetail"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                layout="@layout/plant_detail">
            </include>

            <include
                android:id="@+id/mDepartmentDetail"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                layout="@layout/department_detail">
            </include>

            <include
                android:id="@+id/mBelowDetail"
                app:layout_constraintTop_toTopOf="parent"
