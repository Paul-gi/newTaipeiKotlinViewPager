<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="3dp"
    android:foreground="@drawable/item_radius"
    >


    <ImageView
        android:id="@+id/mPic01_URL"
        android:layout_width="130dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/mName_Ch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/mPic01_URL"
        app:layout_constraintRight_toRightOf="@id/mPic01_URL"
        app:layout_constraintLeft_toLeftOf="@id/mPic01_URL"
        />

    <TextView
        android:id="@+id/mName_En"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/mName_Ch"
        app:layout_constraintRight_toRightOf="@id/mName_Ch"
        app:layout_constraintTop_toBottomOf="@+id/mName_Ch"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>